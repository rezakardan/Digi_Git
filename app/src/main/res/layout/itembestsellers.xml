<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_10mdp">


<ImageView
    android:layout_width="@dimen/_120mdp"
    android:layout_height="@dimen/_120mdp"
    android:id="@+id/imgBestSeller"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"

    />


    <TextView
        app:layout_constraintEnd_toStartOf="@id/imgBestSeller"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/numberBestSeller"
        android:textColor="@color/blue"
        android:text="30"
        android:textSize="@dimen/_30mdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <TextView
        android:id="@+id/txtBestSeller"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_15mdp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/numberBestSeller"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>