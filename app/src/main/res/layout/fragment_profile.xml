                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50mdp"


                            android:src="@drawable/digi_unpaid"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/txt31"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5mdp"
                            android:layout_marginTop="@dimen/_5mdp"
                            android:layout_marginBottom="@dimen/_5mdp"
                            android:text="@string/unpaid"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12font_mdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/img31" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constOrder2"
                        android:layout_width="@dimen/_80mdp"
                        android:layout_height="@dimen/_80mdp"
                        android:layout_marginStart="@dimen/_10mdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/constOrder1"
                        app:layout_constraintTop_toTopOf="parent">


                        <ImageView
                            android:id="@+id/img32"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50mdp"

                            android:src="@drawable/digi_processing"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/txt32"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5mdp"
                            android:layout_marginTop="@dimen/_5mdp"
                            android:layout_marginBottom="@dimen/_5mdp"
                            android:text="@string/processing"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12font_mdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/img32" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constOrder3"
                        android:layout_width="@dimen/_80mdp"
                        android:layout_height="@dimen/_80mdp"
                        android:layout_marginStart="@dimen/_10mdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/constOrder2"

                        app:layout_constraintTop_toTopOf="parent">


                        <ImageView
                            android:id="@+id/img43"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50mdp"

                            android:src="@drawable/digi_delivered"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/txt43"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5mdp"
                            android:layout_marginTop="@dimen/_5mdp"
                            android:layout_marginBottom="@dimen/_5mdp"
                            android:text="@string/my_orders"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12font_mdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/img43" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constOrder4"
                        android:layout_width="@dimen/_80mdp"
                        android:layout_height="@dimen/_80mdp"
                        android:layout_marginStart="@dimen/_10mdp"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/constOrder3"
                        app:layout_constraintTop_toTopOf="parent">


                        <ImageView
                            android:id="@+id/img34"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50mdp"

                            android:src="@drawable/digi_cancel"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/txt34"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5mdp"
                            android:layout_marginTop="@dimen/_5mdp"
                            android:layout_marginBottom="@dimen/_5mdp"
                            android:text="@string/canceled"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15font_mdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/img34" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constOrder5"
                        android:layout_width="@dimen/_80mdp"
                        android:layout_height="@dimen/_80mdp"
                        android:layout_marginStart="@dimen/_10mdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/constOrder4"

                        app:layout_constraintTop_toTopOf="parent">


                        <ImageView
                            android:id="@+id/img35"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50mdp"

                            android:src="@drawable/digi_returned"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/txt35"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5mdp"
                            android:layout_marginTop="@dimen/_5mdp"
                            android:layout_marginBottom="@dimen/_5mdp"
                            android:text="@string/returned"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15font_mdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/img35" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </HorizontalScrollView>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constImgAdaLay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/scrollOrders">


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/imgAds"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120mdp"


                    android:layout_margin="@dimen/_10mdp"
                    app:cardCornerRadius="@dimen/_10mdp"

                    app:cardElevation="@dimen/_3mdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <androidx.constraintlayout.widget.ConstraintLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/imgSlider"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constDigiPlusLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10mdp"
                app:layout_constraintTop_toBottomOf="@+id/constImgAdaLay1">


                <ImageView
                    android:id="@+id/imgDigiPlus"
                    android:layout_width="@dimen/_40mdp"
                    android:layout_height="@dimen/_40mdp"
                    android:src="@drawable/digiplus"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10mdp"
                    android:text="@string/digi_plus"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15font_mdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imgDigiPlus"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView

                    android:id="@+id/imgGoToDigiPlus"
                    android:layout_width="@dimen/_40mdp"
                    android:layout_height="@dimen/_40mdp"
                    android:layout_marginStart="@dimen/_10mdp"
                    android:src="@drawable/arrow_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constDigiFavorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10mdp"
                app:layout_constraintTop_toBottomOf="@+id/constDigiPlusLay">


                <ImageView
                    android:id="@+id/imgDigiPlusFavorite"
                    android:layout_width="@dimen/_40mdp"
                    android:layout_height="@dimen/_40mdp"
                    android:src="@drawable/digi_fav_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10mdp"
                    android:text="@string/fav_list"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15font_mdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imgDigiPlusFavorite"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imgGoToDigiPlusFavorite"
                    android:layout_width="@dimen/_40mdp"
                    android:layout_height="@dimen/_40mdp"
                    android:layout_marginStart="@dimen/_10mdp"
                    android:src="@drawable/arrow_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constDigiPlusLayNazarat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10mdp"
                app:layout_constraintTop_toBottomOf="@+id/constDigiFavorite">


                <ImageView
                    android:id="@+id/imgDigiNazarat"
                    android:layout_width="@dimen/_40mdp"
                    android:layout_height="@dimen/_40mdp"
                    android:src="@drawable/digi_comments_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10mdp"
                    android:text="@string/my_comments"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15font_mdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imgDigiNazarat"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imgGoToDigiPlusNazarat"
                    android:layout_width="@dimen/_40mdp"
                    android:layout_height="@dimen/_40mdp"
                    android:layout_marginStart="@dimen/_10mdp"
                    android:src="@drawable/arrow_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
